server {
        listen                *:80;
        server_name           @hostname.@domain *.@hostname.@domain;

        if ($ssl_protocol = "") {
                return 301 https://$host$request_uri;
        }

        index  index.html index.htm index.php;

        access_log            /var/log/nginx/@hostname.@domain.access.log;
        error_log             /var/log/nginx/@hostname.@domain.error.log;

        location /404.html{
                root /usr/local/nginx/html/;
        }
        location / {
                proxy_intercept_errors on;
                proxy_pass          http://@hostname.@domain;
                proxy_read_timeout  90;
                error_page 404 /404.html;
        }
}
server {
        listen       *:443 ssl;
        server_name           @hostname.@domain *.@hostname.@domain;

        ssl on;
        ssl_certificate           /etc/nginx/li682-64.members.linode.com.crt;
        ssl_certificate_key       /etc/nginx/li682-64.members.linode.com.key;
        ssl_session_cache         shared:SSL:10m;
        ssl_session_timeout       5m;
        ssl_protocols             SSLv3 TLSv1 TLSv1.1 TLSv1.2;
        ssl_ciphers               HIGH:!aNULL:!MD5;
        ssl_prefer_server_ciphers on;

        index  index.html index.htm index.php;

        access_log            /var/log/nginx/ssl-@hostname.@domain.access.log;
        error_log             /var/log/nginx/ssl-@hostname.@domain.error.log;
        
        location /404.html{
                root /usr/local/nginx/html/;
        }
        location / {
                error_page 404 /404.html;
                proxy_intercept_errors on;
                proxy_pass          http://@hostname.@domain;
                proxy_read_timeout  90;
        }
}